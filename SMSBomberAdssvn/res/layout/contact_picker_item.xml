<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:padding="4dip">
	<CheckBox android:id="@+id/chkName" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:layout_gravity="center_vertical"
		android:focusable="false" android:clickable="true"
		android:duplicateParentState="true" android:text=""
		android:paddingRight="5px" />
	<LinearLayout android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:layout_gravity="center">

		<TextView android:id="@+id/txtNumberType" android:textSize="12sp"
			android:layout_height="wrap_content" android:text="Default"
			android:layout_width="wrap_content" android:paddingLeft="5px"
			android:paddingRight="5px" android:layout_weight="0.5" />
		<TextView android:id="@+id/txtNumber" android:textSize="12sp"
			android:layout_height="wrap_content" android:text="hello"
			android:layout_width="wrap_content" android:paddingLeft="5px"
			android:paddingRight="5px" android:layout_weight="0.5" />
	</LinearLayout>

</LinearLayout>